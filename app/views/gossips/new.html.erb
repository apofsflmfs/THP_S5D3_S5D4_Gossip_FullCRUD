<div class="container-fluid">
  <h1>Création d'un Gossip</h1>
  <%= form_for @gossip do |f|%>
    <div class="form-group col-md-6">
      <label>Contenu du gossip</label>  
      <%= f.text_area :content, size: "20x3", class: "form-control", placeholder: "Saisissez ici votre texte" %>
    </div>
    <div class="form-group col-md-12">
      <button type="submit" class="btn btn-primary">Créer le gossip</button>
    </div>
  <%end%>
</div>