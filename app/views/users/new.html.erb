<h1>Enregistrement d'un utilisateur</h1>

<%= form_for @user do |f|%>
  <div class="col-md-6">

    <div class="form-group">
      <label>First Name</label>  
      <%= f.text_field :first_name, class: "form-control", placeholder: "Jean" %>
    </div>

    <div class="form-group">
      <label>Ville</label>  
      <%= f.collection_select :city_id, City.order(:name),:id,:name, {include_blank: false}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <label>Email</label>  
      <%= f.text_field :email, class: "form-control", placeholder: "jean@email.com" %>
    </div>

    <div class="form-group">
      <label>Mot de passe</label>  
      <%= f.password_field :password, class: "form-control", placeholder: "*******" %>
    </div>
    
    <div class="form-group">
      <button type="submit" class="btn btn-primary">CrÃ©er le compte</button>
    </div>
  </div>
<%end%>

